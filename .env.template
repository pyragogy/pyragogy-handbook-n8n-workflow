# n8n Basic Authentication
N8N_BASIC_AUTH_USER=n8nuser
N8N_BASIC_AUTH_PASSWORD=n8npassword

# n8n Host and Port
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
# Public URL for webhooks (important for HITL email links)
# Replace with your actual n8n instance URL if running remotely
N8N_WEBHOOK_URL=http://localhost:5678

# Postgres Database
POSTGRES_DB=pyragogy_db
POSTGRES_USER=pyragogy_user
POSTGRES_PASSWORD=securepassword
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# OpenAI API Key for GPT agents
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Personal Access Token (PAT) and repository details for archiving
# PAT needs 'repo' scope
GITHUB_ACCESS_TOKEN=your_github_pat_here
GITHUB_REPOSITORY_OWNER=pyragogy
GITHUB_REPOSITORY_NAME=pyragogy-n8n-workflow

# Slack Webhook URL for notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email settings for Human-in-the-Loop review
# You need to configure an Email credential in n8n UI first
# (e.g., SMTP or other service, and then copy its ID)
EMAIL_SENDER=your_sender_email@example.com
EMAIL_RECEIVER=human_reviewer@example.com
# IMPORTANT: This is the ID of the email credential you create in n8n.
# DO NOT put your actual email password here.
EMAIL_CREDENTIAL_ID=your_n8n_email_credential_id_here
